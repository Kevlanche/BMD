package com.kevlanche.beaversmustdie;

import com.badlogic.gdx.math.Vector2;
import com.badlogic.gdx.physics.box2d.Body;
import com.badlogic.gdx.scenes.scene2d.Actor;

public class PhysicsActor extends Actor {

	protected Body physicsBody;
	
	protected PhysicsActor() {
	}
	
	protected void setPhysicsBody(Body b) {
		this.physicsBody = b;
	}
	
	public void act(float delta) {
		super.act(delta);
		
	}
	
	@Override
	public float getX() {
		return physicsBody.getPosition().x;
	}
	@Override
	public float getY() {
		return physicsBody.getPosition().y;
	}
	
	@Override
	public void setX(float x) {
		physicsBody.setTransform(x, getY(), physicsBody.getAngle());
	}
	@Override
	public void setY(float y) {
		physicsBody.setTransform(getX(), y, physicsBody.getAngle());
	}
	@Override
	public void setPosition(float x, float y) {
		
		physicsBody.setTransform(x, y, physicsBody.getAngle());
	}
}
